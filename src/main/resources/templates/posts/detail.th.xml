<?xml version="1.0"?>
<thlogic>
    <attr sel="#header" th:replace="~{header :: header}" />
    <attr sel="#footer" th:replace="~{footer :: footer}" />

    <attr sel="main">
        <attr sel="#editPostBtn" th:href="'/posts/' + ${post.id} + '/edit'" th:method="get"/>
        <attr sel="#post-list">
            <attr sel="div[0]" th:object="${post}">
                <attr sel="div.user-id/b" th:text="${post.userId}" />
                <attr sel="div.created-at/time" th:datetime="${post.createdAt}" th:text="${#temporals.format(post.createdAt, 'yyyy-MM-dd HH:mm')}" />
                <attr sel=".post-title-content" />
                <attr sel="b.title" th:text="${post.title}"/>
                <attr sel="span.content" th:text="${post.content}"/>
            </attr>
        </attr>


    </attr>
</thlogic>